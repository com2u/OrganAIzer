# File: /home/com2u/src/OrganAIzer/.env.example
# Purpose: Environment variables template for OrganAIzer
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=organaizer
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Hasura Configuration
HASURA_GRAPHQL_DATABASE_URL=postgresql://your_db_user:your_secure_password@postgres:5432/organaizer
HASURA_GRAPHQL_ADMIN_SECRET=your_hasura_admin_secret
HASURA_GRAPHQL_ENABLE_CONSOLE=true
HASURA_GRAPHQL_DEV_MODE=true
HASURA_GRAPHQL_ENABLED_LOG_TYPES=startup,http-log,webhook-log,websocket-log,query-log

# Node.js Backend Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=your_jwt_secret_key

# Entra ID / Azure AD Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_REDIRECT_URI=http://localhost:3001/auth/openid/return
AZURE_SCOPE=openid profile email

# Frontend Configuration
REACT_APP_HASURA_ENDPOINT=http://localhost:8080/v1/graphql
REACT_APP_HASURA_ADMIN_SECRET=your_hasura_admin_secret
REACT_APP_BACKEND_URL=http://localhost:3001

# External API Keys (if needed)
OPENROUTER_APIKEY=your_openrouter_api_key
